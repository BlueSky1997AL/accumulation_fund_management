{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es2015", "dom" ],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "~containers/*": [
                "./src/containers/*"
            ],
            "~components/*": [
                "./src/components/*"
            ],
            "~static/*": [
                "./src/static/*"
            ],
            "~utils/*": [
                "./src/utils/*"
            ]
        }
    },
    "include": [
        "./src/**/*",
        "./typings/**/*"
    ],
}
